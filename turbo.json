{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_STATIC_EXPORT",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_DIST_URL",
        "NEXT_PUBLIC_BASE_PATH",
        "NEXT_PUBLIC_VERCEL_REVALIDATE_TIME",
        "NEXT_PUBLIC_DATA_URL"
      ],
      "dotEnv": [".env.development.local", ".env.development", ".env.local", ".env"]
    },
    "build": {
      "inputs": [
        "src/**/*.{ts,tsx}",
        "src/**/*.css",
        "src/**/*.{mjs,json}",
        "src/**/*.{mdx,md}",
        "helpers/**/*.{mjs}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_STATIC_EXPORT",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_DIST_URL",
        "NEXT_PUBLIC_BASE_PATH",
        "NEXT_PUBLIC_VERCEL_REVALIDATE_TIME",
        "NEXT_PUBLIC_DATA_URL"
      ],
      "dotEnv": [".env.production.local", ".env.production", ".env.local", ".env"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_STATIC_EXPORT",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_DIST_URL",
        "NEXT_PUBLIC_BASE_PATH",
        "NEXT_PUBLIC_VERCEL_REVALIDATE_TIME",
        "NEXT_PUBLIC_DATA_URL"
      ]
    },
    "deploy": {
      "inputs": [
        "src/**/*.{ts,tsx}",
        "src/**/*.css",
        "src/**/*.{mjs,json}",
        "src/**/*.{mdx,md}",
        "helpers/**/*.{mjs}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_STATIC_EXPORT",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "NEXT_PUBLIC_BASE_PATH",
        "NEXT_PUBLIC_VERCEL_REVALIDATE_TIME",
        "NEXT_PUBLIC_DATA_URL"
      ]
    },
    "lint:js": {
      "inputs": [
        "src/**/*.{ts,tsx,mjs}",
        "src/**/*.{mjs,json}",
        "helpers/**/*.{mjs}",
        "{.storybook,public}/**/*.{ts,js,json}",
        "*.{json,ts,tsx}"
      ],
      "outputs": [".eslintjscache"]
    },
    "lint:md": {
      "inputs": ["src/**/*.{md,mdx}", "*.{md,mdx}"],
      "outputs": [".eslintmdcache"]
    },
    "lint:css": {
      "inputs": ["src/**/*.css"],
      "outputs": [".stylelintcache"]
    },
    "lint:fix": {
      "cache": false
    },
    "prettier": {
      "outputs": [".prettiercache"]
    },
    "prettier:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "inputs": [
        "src/**/*.{ts,tsx}",
        "src/**/*.css",
        "src/**/*.{mjs,json}",
        "helpers/**/*.{mjs}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "src/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": ["storybook-static/**"]
    },
    "test:unit": {
      "inputs": [
        "src/**/*.{ts,tsx,mjs}",
        "src/**/*.css",
        "src/**/*.{mjs,json}",
        "src/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": ["coverage/**", "junit.xml"]
    }
  }
}
